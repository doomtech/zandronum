// These need to be defined so that their indices can be found but they aren't used.
attribute vec3 aLightParams;
attribute vec4 aFogColor;
attribute vec2 aGlowDistance;
attribute vec4 aGlowTopColor;
attribute vec4 aGlowBottomColor;

uniform vec4 uTextureScale;


void main()
{
	gl_FrontColor = gl_Color /*lightcolor*/;
	gl_TexCoord[0] = uTextureScale * gl_MultiTexCoord0 /* texcoord */;
	gl_Position = ftransform();
}
